# Example environment variables for MentorMe backend
# Copy this file to .env and replace placeholder values.

PORT=4000

# Change in production to a strong random secret
JWT_SECRET=your-jwt-secret-here

# PostgreSQL connection string example
# Format: postgres://USERNAME:PASSWORD@HOST:PORT/DBNAME?sslmode=require
DATABASE_URL=postgres://user:password@host:5432/dbname?sslmode=require

# Redis connection
REDIS_HOST=your-redis-host.example.com
REDIS_PASSWORD=your-redis-password
REDIS_PORT=10938
REDIS_USERNAME=default

# Base URL used by internal HTTP client (includes /api/v1)
API_BASE_URL=http://localhost:4000/api/v1

# Email / SendGrid
# Set EMAIL_DISABLED=true to skip sending emails in QA/dev
EMAIL_DISABLED=false
SENDGRID_API_KEY=
EMAIL_FROM=

# Booking jobs and policies
BOOKING_EXPIRY_MINUTES=15
BOOKING_JOB_INTERVAL_SECONDS=60
REMINDER_WINDOW_MINUTES=10

# Mentor confirmation
MENTOR_CONFIRM_REQUIRED=false
MENTOR_CONFIRM_DEADLINE_HOURS=12

# Late cancellation policy
LATE_CANCEL_MINUTES=1440
LATE_CANCEL_ACTION=block

# Firebase Admin SDK (choose one)
# FIREBASE_SERVICE_ACCOUNT_JSON can be raw JSON or base64-encoded JSON
FIREBASE_SERVICE_ACCOUNT_JSON=
# Or provide a path to the JSON file (absolute or relative to backend/)
FIREBASE_SERVICE_ACCOUNT_PATH=

# Socket.IO
# Comma-separated origins, use * to allow all (disables credentials)
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_REDIS_ENABLED=true
